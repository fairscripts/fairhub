-- // UI estilo pasta Mac - Fair Hub
-- Pode rodar diretamente no Delta Executor

-- Serviços
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

-- Remove UI antiga se já existir
if CoreGui:FindFirstChild("FairHubUI") then
    CoreGui.FairHubUI:Destroy()
end

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "FairHubUI"
gui.Parent = CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.ResetOnSpawn = false

-- Janela principal
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 300)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 38, 43)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = gui
mainFrame.Active = true
mainFrame.Draggable = true

-- Cantos arredondados
local mainCorner = Instance.new("UICorner", mainFrame)
mainCorner.CornerRadius = UDim.new(0, 8)

-- Barra lateral
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 150, 1, 0)
sidebar.Position = UDim2.new(0, 0, 0, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(90, 30, 90)
sidebar.BorderSizePixel = 0
sidebar.Parent = mainFrame

local sideCorner = Instance.new("UICorner", sidebar)
sideCorner.CornerRadius = UDim.new(0, 8)

-- Título
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Fair Hub"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = sidebar

-- Botão Auto Farm
local autoFarmBtn = Instance.new("TextButton")
autoFarmBtn.Size = UDim2.new(1, -20, 0, 30)
autoFarmBtn.Position = UDim2.new(0, 10, 0, 60)
autoFarmBtn.BackgroundColor3 = Color3.fromRGB(130, 50, 130)
autoFarmBtn.Text = "Auto Farm"
autoFarmBtn.Font = Enum.Font.SourceSansBold
autoFarmBtn.TextSize = 20
autoFarmBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoFarmBtn.BorderSizePixel = 0
autoFarmBtn.Parent = sidebar

local btnCorner = Instance.new("UICorner", autoFarmBtn)
btnCorner.CornerRadius = UDim.new(0, 6)

-- Animação hover
autoFarmBtn.MouseEnter:Connect(function()
    TweenService:Create(autoFarmBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(150, 70, 150)}):Play()
end)
autoFarmBtn.MouseLeave:Connect(function()
    TweenService:Create(autoFarmBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(130, 50, 130)}):Play()
end)

-- Função do botão
autoFarmBtn.MouseButton1Click:Connect(function()
    print("Auto Farm ativado!") -- Aqui você coloca o script de farm
end)
