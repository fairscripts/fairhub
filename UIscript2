-- // UI estilo pasta Mac - Fair Hub
-- Pode rodar diretamente no Delta Executor

-- Serviços
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

-- Remove UI antiga se já existir
if CoreGui:FindFirstChild("FairHubUI") then
    CoreGui.FairHubUI:Destroy()
end

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "FairHubUI"
gui.Parent = CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.ResetOnSpawn = false

-- Janela principal
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.45, 0, 0.7, 0) -- Tamanho ajustado para ser mais proporcional
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30) -- Cor escura para o painel principal
mainFrame.BorderSizePixel = 0
mainFrame.Parent = gui
mainFrame.Active = true
mainFrame.Draggable = true

-- Cantos arredondados na janela principal
local mainCorner = Instance.new("UICorner", mainFrame)
mainCorner.CornerRadius = UDim.new(0, 8)

-- Painel lateral (roxo)
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0.3, 0, 1, 0) -- Largura ajustada para 30% da janela
sidebar.Position = UDim2.new(0, 0, 0, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(90, 30, 90) -- Cor roxa
sidebar.BorderSizePixel = 0
sidebar.Parent = mainFrame
sidebar.ZIndex = 2 -- Garante que o painel lateral esteja acima do principal

-- Cantos arredondados apenas no lado esquerdo do painel lateral (limitação do UICorner, que afeta todos os cantos)
local sidebarCorner = Instance.new("UICorner", sidebar)
sidebarCorner.CornerRadius = UDim.new(0, 8)

-- Painel para a área do título (ciano)
local titlePanel = Instance.new("Frame")
titlePanel.Size = UDim2.new(1, 0, 0, 40)
titlePanel.Position = UDim2.new(0, 0, 0, 0)
titlePanel.BackgroundColor3 = Color3.fromRGB(0, 200, 255) -- Cor ciano
titlePanel.Parent = sidebar

-- Título "Fair Hub"
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 1, 0)
title.BackgroundTransparency = 1
title.Text = "Fair Hub"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Center
title.Parent = titlePanel

-- Lista de itens na barra lateral
local sidebarList = Instance.new("UIListLayout", sidebar)
sidebarList.Padding = UDim.new(0, 10)
sidebarList.SortOrder = Enum.SortOrder.LayoutOrder
sidebarList.HorizontalAlignment = Enum.HorizontalAlignment.Left
sidebarList.VerticalAlignment = Enum.VerticalAlignment.Top

local sidebarPadding = Instance.new("Frame", sidebar)
sidebarPadding.Size = UDim2.new(1, 0, 0, 60)
sidebarPadding.BackgroundTransparency = 1
sidebarPadding.LayoutOrder = 1

-- Botão "Auto Farm"
local autoFarmBtn = Instance.new("TextButton")
autoFarmBtn.Name = "AutoFarmButton"
autoFarmBtn.Size = UDim2.new(1, -20, 0, 30)
autoFarmBtn.Position = UDim2.new(0, 10, 0, 60)
autoFarmBtn.BackgroundColor3 = Color3.fromRGB(130, 50, 130)
autoFarmBtn.Text = "Auto Farm"
autoFarmBtn.Font = Enum.Font.SourceSansBold
autoFarmBtn.TextSize = 18
autoFarmBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoFarmBtn.BorderSizePixel = 0
autoFarmBtn.Parent = sidebar
autoFarmBtn.LayoutOrder = 2
autoFarmBtn.TextXAlignment = Enum.TextXAlignment.Left -- Alinha o texto à esquerda
autoFarmBtn.Padding = 10 -- Adiciona um espaço à esquerda do texto

local btnCorner = Instance.new("UICorner", autoFarmBtn)
btnCorner.CornerRadius = UDim.new(0, 6)

-- Animação hover
autoFarmBtn.MouseEnter:Connect(function()
    TweenService:Create(autoFarmBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(150, 70, 150)}):Play()
end)
autoFarmBtn.MouseLeave:Connect(function()
    TweenService:Create(autoFarmBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(130, 50, 130)}):Play()
end)

-- Painel principal de conteúdo (à direita)
local mainPanel = Instance.new("Frame")
mainPanel.Size = UDim2.new(0.7, 0, 1, 0)
mainPanel.Position = UDim2.new(0.3, 0, 0, 0)
mainPanel.BackgroundColor3 = Color3.fromRGB(40, 38, 43)
mainPanel.BorderSizePixel = 0
mainPanel.Parent = mainFrame

-- Borda separadora entre os painéis
local separator = Instance.new("Frame", mainFrame)
separator.Size = UDim2.new(0, 1, 1, 0)
separator.Position = UDim2.new(0.3, 0, 0, 0)
separator.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
separator.BorderSizePixel = 0
separator.ZIndex = 3

-- Animação de entrada da UI
mainFrame.Visible = false
mainFrame.Position = UDim2.new(0.5, 0, 0, -350)
mainFrame.Visible = true

TweenService:Create(mainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Exponential, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, 0, 0.5, 0)}):Play()

-- Função do botão
autoFarmBtn.MouseButton1Click:Connect(function()
    print("Auto Farm ativado! Aqui você coloca a funcionalidade do seu script de farm.")
    -- Exemplo: Crie ou ative um script de auto farm aqui
    -- local autoFarmScript = Instance.new("Script")
    -- autoFarmScript.Parent = workspace
    -- autoFarmScript.Source = "while true do wait(1) print('farmando...') end"
end)
