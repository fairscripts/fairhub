-- Abas
local tabs = { "Autofarm", "Misc" }
local tabButtons = {}

-- Função para mudar aba
local function switchTab(tabName)
	for name, btn in pairs(tabButtons) do
		btn.BackgroundColor3 = (name == tabName) and Color3.fromRGB(36, 38, 41) or Color3.fromRGB(24, 25, 27)
	end
	for _, child in pairs(contentFrame:GetChildren()) do
		if child:IsA("Frame") and child.Name ~= "UIPadding" then
			child.Visible = (child.Name == tabName)
		end
	end
end

-- Criar botões das abas
for i, tabName in ipairs(tabs) do
	local btn = Instance.new("Frame", sidebarFrame)
	btn.Name = tabName .. "Button"
	btn.Size = UDim2.new(1, -10, 0, 35)
	btn.BackgroundColor3 = Color3.fromRGB(24, 25, 27)
	btn.BorderSizePixel = 0
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 5)

	local btnText = Instance.new("TextLabel", btn)
	btnText.Size = UDim2.new(1, -10, 1, 0)
	btnText.Position = UDim2.new(0, 10, 0, 0)
	btnText.Text = tabName
	btnText.Font = Enum.Font.SourceSans
	btnText.TextSize = 14
	btnText.TextXAlignment = Enum.TextXAlignment.Left
	btnText.TextColor3 = Color3.fromRGB(255, 255, 255)
	btnText.BackgroundTransparency = 1

	local clickDetector = Instance.new("TextButton", btn)
	clickDetector.Size = UDim2.new(1, 0, 1, 0)
	clickDetector.BackgroundTransparency = 1
	clickDetector.Text = ""
	clickDetector.ZIndex = 4
	clickDetector.MouseButton1Click:Connect(function()
		switchTab(tabName)
	end)

	tabButtons[tabName] = btn
end

