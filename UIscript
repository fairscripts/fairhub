-- UI estilo pasta macOS - Fair Hub
-- Feito para rodar no Delta Executor

local CoreGui = game:GetService("CoreGui")

-- Remover se já existir
if CoreGui:FindFirstChild("FairHubUI") then
    CoreGui.FairHubUI:Destroy()
end

-- Criar ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "FairHubUI"
gui.Parent = CoreGui
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Janela principal
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 400)
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(35, 30, 35)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = gui
mainFrame.Active = true
mainFrame.Draggable = true

-- Cantos arredondados
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 8)

-- Barra lateral
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 180, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(128, 0, 128)
sidebar.BorderSizePixel = 0
sidebar.Parent = mainFrame
Instance.new("UICorner", sidebar).CornerRadius = UDim.new(0, 8)

-- Gradiente na barra lateral
local gradient = Instance.new("UIGradient", sidebar)
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(80, 20, 80)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(160, 60, 160))
}
gradient.Rotation = 0

-- Título "Fair Hub"
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Fair Hub"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = sidebar

-- Botão Auto Farm
local autoFarmBtn = Instance.new("TextButton")
autoFarmBtn.Size = UDim2.new(1, -20, 0, 28)
autoFarmBtn.Position = UDim2.new(0, 10, 0, 50)
autoFarmBtn.BackgroundColor3 = Color3.fromRGB(90, 40, 90)
autoFarmBtn.Text = "Auto Farm"
autoFarmBtn.Font = Enum.Font.SourceSans
autoFarmBtn.TextSize = 20
autoFarmBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoFarmBtn.BorderSizePixel = 0
autoFarmBtn.Parent = sidebar
Instance.new("UICorner", autoFarmBtn).CornerRadius = UDim.new(0, 6)

-- Área principal
local content = Instance.new("Frame")
content.Size = UDim2.new(1, -180, 1, 0)
content.Position = UDim2.new(0, 180, 0, 0)
content.BackgroundColor3 = Color3.fromRGB(45, 40, 45)
content.BorderSizePixel = 0
content.Parent = mainFrame
Instance.new("UICorner", content).CornerRadius = UDim.new(0, 8)

-- Botões estilo mac (fechar, minimizar, maximizar)
local topBar = Instance.new("Frame")
topBar.Size = UDim2.new(0, 60, 0, 20)
topBar.Position = UDim2.new(1, -70, 0, 10)
topBar.BackgroundTransparency = 1
topBar.Parent = mainFrame

local colors = {
    Color3.fromRGB(255, 95, 86),  -- vermelho
    Color3.fromRGB(255, 189, 46), -- amarelo
    Color3.fromRGB(39, 201, 63)   -- verde
}

for i, col in ipairs(colors) do
    local dot = Instance.new("Frame")
    dot.Size = UDim2.new(0, 14, 0, 14)
    dot.Position = UDim2.new(0, (i - 1) * 20, 0, 0)
    dot.BackgroundColor3 = col
    dot.BorderSizePixel = 0
    Instance.new("UICorner", dot).CornerRadius = UDim.new(1, 0)
    dot.Parent = topBar
end

-- Função do botão Auto Farm
autoFarmBtn.MouseButton1Click:Connect(function()
    print("Auto Farm ativado!") -- Coloque seu script aqui
end)
